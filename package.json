{
  "name": "journal-backend-express",
  "version": "1.0.0",
  "description": "Journal App Backend, using Express.js",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint --fix --ext .js,.ts .",
    "migrate:latest": "ts-node -r dotenv/config scripts/migrate",
    "migrate:rollback": "ts-node -r dotenv/config scripts/rollback",
    "postinstall": "husky install",
    "start": "npm run build:live",
    "test": "jest --coverage"
  },
  "keywords": [
    "express"
  ],
  "author": "Marcus Vinicius Monteiro de Souza",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/pino": "^6.3.6",
    "@types/pino-http": "^5.4.0",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "celebrate": "^13.0.4",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "knex": "^0.21.17",
    "knex-stringcase": "^1.4.5",
    "lodash": "^4.17.21",
    "pg": "^8.5.1",
    "pino": "^6.11.1",
    "pino-http": "^5.5.0",
    "pino-pretty": "^4.5.0"
  }
}
