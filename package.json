{
  "name": "journal-backend-express",
  "version": "1.0.0",
  "description": "Journal App Backend, using Express.js",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint --fix --ext .js,.ts .",
    "postinstall": "husky install",
    "start": "npm run build:live"
  },
  "keywords": [
    "express"
  ],
  "author": "Marcus Vinicius Monteiro de Souza",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "knex": "^0.21.17",
    "pg": "^8.5.1",
    "uuid": "^8.3.2"
  }
}
